<Window x:Class="MusicPlayer.CreatePlaylistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Создать плейлист" Height="300" Width="400">
    <StackPanel Margin="10">
        <TextBlock Text="Имя плейлиста:" Margin="0,0,0,5"/>
        <TextBox x:Name="txtPlaylistName" Width="200"/>

        <TextBlock Text="Изображение плейлиста:" Margin="0,10,0,5"/>
        <Button Content="Выбрать изображение" Click="btnChooseImage_Click"/>
        <Image x:Name="imgPlaylistPreview" Height="100" Margin="0,10"/>

        <Button Content="Создать" Click="btnCreate_Click" Margin="0,20,0,0"/>
    </StackPanel>
</Window>
